{{#each posts as |post|}}
<div class="container">
    <div class="card mt-2">
    <div class="card-header card text-white bg-dark mb-3"><strong>{{post.title}}</strong><p>Posted by {{post.user.username}} on {{post.date_created}}</p></div>
    <div class="card-body">
        <p class="card-text">{{post.content}}</p>
    </div>
    </div>
</div>
{{/each}}