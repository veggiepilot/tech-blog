<div class="container mt-5">
    <form class="update-post">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" name="title" value="{{post.title}}" id="title">
        </div>
        <div class="mb-3">
            <label for="content" class="form-label">Content</label>
            <textarea class="form-control" id="content" style="height: 200px">{{post.content}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary" id={{post.id}}>UPDATE</button>
    </form>
</div>

<script src="/js/dashboard.js"></script>